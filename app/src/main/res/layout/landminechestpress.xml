<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Landmine Chest Press"
            android:textColor="#FF000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!--<Button-->
        <!--android:id="@+id/dismissBtn"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:background="@drawable/cross"-->

        <!--/>-->



        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/exercise"
            android:background="#FFFFFF">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/goBack"
                android:src="@drawable/landminechestpress1"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/goBack"
                android:src="@drawable/landminechestpress2"
                android:visibility="visible" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/rootLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:orientation="vertical"
            android:background="#FFFFFF">




            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goBack"
                android:text="Instruction"
                android:textColor="#FF000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:inputType="textMultiLine"

                android:text="1. Stand in a comfortable athletic stance with your feet firmly rooted to the floor.\n
2. Attachment implements can be utilized for experimenting with different grips, but a neutral grip is likely the easiest and safest method for most people.\n
3. Leg stabilization and strong core activation are keys for greater pressing strength.\n
4. Using a plyo box allows for greater external loading of the landmine.\n
5. Toward the top of this lift, the weight becomes easier because of increased momentum, so using bands can be beneficial for increased resistance throughout the lift."
                android:textSize="20sp" />


        </LinearLayout>


    </RelativeLayout>
</ScrollView>
